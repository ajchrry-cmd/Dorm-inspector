                        <label for="roomInput">Add Room Numbers</label>
                        <div class="add-room-controls">
                            <select id="roomInput">
                                <option value="">Select Room to Add</option>
                            </select>
                            <button type="button" class="add-room-btn" onclick="addRoomToSchedule()">‚ûï Add</button>
                        </div>
                    </div>

                    <div style="margin: 25px 0;">
                        <h4 style="margin-bottom: 12px; color: #e2e8f0;">Scheduled Rooms for This Week:</h4>
                        <div id="scheduled-rooms" style="min-height: 60px; background: linear-gradient(135deg, #4a5568, #2d3748); border: 2px solid #3182ce; border-radius: 12px; padding: 16px; box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);">
                            <p style="color: #a0aec0; text-align: center; margin: 15px 0;">No rooms scheduled yet. Add rooms above.</p>
                        </div>
                    </div>

                    <div class="schedule-actions">
                        <button type="button" onclick="clearAllScheduledRooms()" style="background: linear-gradient(145deg, #e53e3e, #c53030); color: #fed7d7; border: none; font-weight: 600; cursor: pointer; box-shadow: 0 3px 10px rgba(229, 62, 62, 0.3);">üóëÔ∏è Clear All Rooms</button>
                        <button type="button" onclick="saveSchedule()" style="background: linear-gradient(145deg, #3182ce, #2c5282); color: #e2e8f0; border: none; font-weight: 600; cursor: pointer; box-shadow: 0 3px 10px rgba(49, 130, 206, 0.3);">üíæ Save Schedule</button>
                    </div>
                </div>
            </div>

            <!-- View Inspections Section -->
            <div id="view-section" class="section">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; flex-wrap: wrap; gap: 15px;">
                    <h2 style="margin: 0; color: #e2e8f0;">üìä Recent Inspections</h2>
                    <button class="delete-all-btn" onclick="deleteAllInspections()">üóëÔ∏è Delete All</button>
                </div>
                <div id="inspections-list">
                    <!-- Populated by JavaScript -->
                </div>
            </div>

            <!-- Reports Section -->
            <div id="reports-section" class="section">
                <h2>üìà Inspection Report</h2>
