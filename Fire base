    <script>
        // Firebase Configuration - YOU NEED TO REPLACE THIS WITH YOUR CONFIG
 	const firebaseConfig = {
  		apiKey: "AIzaSyCEzhO5BhgZrlLnnlfJoQ-jOnpHaa6hfHI",
  		authDomain: "dorm-inspection-system.firebaseapp.com",
  		projectId: "dorm-inspection-system",
  		storageBucket: "dorm-inspection-system.firebasestorage.app",
  		messagingSenderId: "996691705980",
  		appId: "1:996691705980:web:5c93d55fa107baf14dc9f9",
  		measurementId: "G-CJ8QZSEQ36"
	};

        // Initialize Firebase
        let db;
        let isConnected = false;
        
        try {
            firebase.initializeApp(firebaseConfig);
            db = firebase.firestore();
            console.log('Firebase initialized successfully');
            updateConnectionStatus(true);
        } catch (error) {
            console.error('Firebase initialization failed:', error);
            updateConnectionStatus(false);
            showError('Failed to connect to database. Using local storage as backup.');
        }

        // Global variables
        var inspections = [];
        var editingId = null;
        var scheduledRooms = [];
        var isLoading = false;
        
        var demerits = [
            "Bed not made or missing 341",
            "Mirror", 
            "Vanity/Sink",
            "Dirty tile or Carpet",
            "Foul odor",
            "High dust or excessive clutter",
            "Trash",
            "Fridge, freezer, or microwave",
            "Shower curtain",
            "Bathtub/shower",
            "Excessive mold build-up",
            "Toilet",
            "Dirty bathroom tile, rugs, or towels"
        ];

        var autoFailureDemerits = [
            "HAZMAT",
            "Unsecured wall locker or keys",
            "Unsecured valuables or uniforms",
            "Unsecured prescription medications",
            "Unsecured Tobacco",
            "Unsecured perishable food",
            "Contraband",
            "Safety items/open window",
            "To-go container/pizza box"
        ];

        // Connection status functions
        function updateConnectionStatus(connected) {
            isConnected = connected;
            const statusDot = document.getElementById('status-dot');
            const statusText = document.getElementById('status-text');
            
            if (connected) {
                statusDot.classList.add('connected');
                statusText.textContent = 'Connected';
            } else {
                statusDot.classList.remove('connected');
                statusText.textContent = 'Offline';
            }
        }

        function showError(message) {
            const container = document.getElementById('error-container');
            container.innerHTML = '<div class="error-message">' + message + '</div>';
            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        function showLoading(show) {
            isLoading = show;
            const overlay = document.getElementById('loading-overlay');
            const saveBtn = document.getElementById('save-btn');
            
            overlay.style.display = show ? 'flex' : 'none';
            
            if (saveBtn) {
                saveBtn.disabled = show;
                saveBtn.textContent = show ? 'Saving...' : 'Save Inspection';
            }
        }

        // Data management functions
        async function loadData() {
            if (!isConnected) {
                loadLocalData();
                return;
            }

            try {
                showLoading(true);
                
                // Load inspections
                const inspectionsDoc = await db.collection('dormData').doc('inspections').get();
                if (inspectionsDoc.exists) {
                    const data = inspectionsDoc.data();
                    inspections = data.inspections || [];
                } else {
                    inspections = [];
                }

                // Load scheduled rooms
                const scheduleDoc = await db.collection('dormData').doc('schedule').get();
                if (scheduleDoc.exists) {
                    const data = scheduleDoc.data();
                    scheduledRooms = data.scheduledRooms || [];
                } else {
                    scheduledRooms = [];
                }

                console.log('Data loaded from Firebase:', { inspections: inspections.length, scheduledRooms: scheduledRooms.length });
                
            } catch (error) {
                console.error('Error loading data from Firebase:', error);
                showError('Failed to load data from database. Using local backup.');
                loadLocalData();
            } finally {
                showLoading(false);
            }
        }

        function loadLocalData() {
            try {
                var saved = localStorage.getItem('dormInspections');
                if (saved) {
                    inspections = JSON.parse(saved);
                }
                var savedSchedule = localStorage.getItem('weeklySchedule');
                if (savedSchedule) {
                    scheduledRooms = JSON.parse(savedSchedule);
                }
                console.log('Data loaded from localStorage');
            } catch (e) {
                inspections = [];
                scheduledRooms = [];
                console.error('Error loading local data:', e);
            }
        }

        async function saveData() {
            // Always save locally as backup
            localStorage.setItem('dormInspections', JSON.stringify(inspections));
            localStorage.setItem('weeklySchedule', JSON.stringify(scheduledRooms));

            if (!isConnected) {
                console.log('Data saved locally (offline mode)');
                return;
            }

            try {
                // Save to Firebase
                await db.collection('dormData').doc('inspections').set({
                    inspections: inspections,
                    lastUpdated: firebase.firestore.FieldValue.serverTimestamp()
                });

                await db.collection('dormData').doc('schedule').set({
                    scheduledRooms: scheduledRooms,
                    lastUpdated: firebase.firestore.FieldValue.serverTimestamp()
                });

                console.log('Data saved to Firebase successfully');
                
            } catch (error) {
                console.error('Error saving to Firebase:', error);
                showError('Failed to save to database. Data saved locally as backup.');
            }
        }

        // Room mode toggle function
        function toggleRoomMode() {
            updateRoomDropdown();
        }

        // Room dropdown update function
        function updateRoomDropdown() {
            var roomSelect = document.getElementById('roomNumber');
            var scheduledMode = document.querySelector('input[name="roomMode"]:checked').value === 'scheduled';
            
            roomSelect.innerHTML = '<option value="">Select Room Number</option>';
            
            if (scheduledMode) {
                if (scheduledRooms.length > 0) {
                    scheduledRooms.sort(function(a, b) { return parseInt(a) - parseInt(b); });
                    for (var i = 0; i < scheduledRooms.length; i++) {
                        var option = document.createElement('option');
                        option.value = scheduledRooms[i];
                        option.textContent = 'Room ' + scheduledRooms[i];
                        roomSelect.appendChild(option);
                    }
                } else {
                    var option = document.createElement('option');
                    option.value = '';
                    option.textContent = 'No rooms scheduled - Set up weekly schedule first';
                    option.disabled = true;
                    roomSelect.appendChild(option);
                }
            } else {
                var group200 = document.createElement('optgroup');
                group200.label = '200 Series';
                for (var i = 201; i <= 290; i++) {
                    var option = document.createElement('option');
                    option.value = i;
                    option.textContent = i;
                    group200.appendChild(option);
                }
                roomSelect.appendChild(group200);

                var group300 = document.createElement('optgroup');
                group300.label = '300 Series';
                for (var i = 301; i <= 390; i++) {
                    var option = document.createElement('option');
                    option.value = i;
                    option.textContent = i;
                    group300.appendChild(option);
                }
                roomSelect.appendChild(group300);
            }
        }

        // Setup form function
        function setupForm() {
            updateRoomDropdown();

            // Setup room input for scheduling
            var roomInput = document.getElementById('roomInput');
            if (roomInput) {
                roomInput.innerHTML = '<option value="">Select Room to Add</option>';
                
                var group200 = document.createElement('optgroup');
                group200.label = '200 Series';
                for (var i = 201; i <= 290; i++) {
                    var option = document.createElement('option');
                    option.value = i;
                    option.textContent = i;
                    group200.appendChild(option);
                }
                roomInput.appendChild(group200);

                var group300 = document.createElement('optgroup');
                group300.label = '300 Series';
                for (var i = 301; i <= 390; i++) {
                    var option = document.createElement('option');
                    option.value = i;
                    option.textContent = i;
                    group300.appendChild(option);
                }
                roomInput.appendChild(group300);
            }

            updateScheduledRoomsDisplay();

            // Setup regular demerits
            var container = document.getElementById('demerits-container');
            if (container) {
                container.innerHTML = '';
                
                for (var i = 0; i < demerits.length; i++) {
                    var card = document.createElement('div');
                    card.className = 'demerit-item';
                    card.setAttribute('data-index', i);
                    card.setAttribute('data-type', 'regular');
                    
                    var textDiv = document.createElement('div');
                    textDiv.className = 'demerit-text';
                    textDiv.textContent = demerits[i];
                    
                    card.appendChild(textDiv);
                    card.onclick = function() {
                        this.classList.toggle('checked');
                        updateScore();
                    };
                    
                    container.appendChild(card);
                }
            }

            // Setup auto-failure demerits
            var autoContainer = document.getElementById('auto-failure-container');
            if (autoContainer) {
                autoContainer.innerHTML = '';
                
                for (var i = 0; i < autoFailureDemerits.length; i++) {
                    var card = document.createElement('div');
                    card.className = 'demerit-item auto-failure';
                    card.setAttribute('data-index', i);
                    card.setAttribute('data-type', 'auto-failure');
                    
                    var textDiv = document.createElement('div');
                    textDiv.className = 'demerit-text';
                    textDiv.textContent = autoFailureDemerits[i];
                    
                    card.appendChild(textDiv);
                    card.onclick = function() {
                        this.classList.toggle('checked');
                        updateScore();
                    };
                    
                    autoContainer.appendChild(card);
                }
            }

            updateScore();
        }

        // Score update function
        function updateScore() {
            var regularChecked = document.querySelectorAll('.demerit-item[data-type="regular"].checked');
            var autoFailureChecked = document.querySelectorAll('.demerit-item[data-type="auto-failure"].checked');
            
            var regularScore = regularChecked.length;
            var autoFailureScore = autoFailureChecked.length * 4;
            var totalScore = regularScore + autoFailureScore;
            
            var status = totalScore >= 4 ? 'FAILED' : 'PASSED';
            
            var scoreDisplay = document.getElementById('score-display');
            var scoreText = 'Score: ' + totalScore + ' points';
            if (autoFailureScore > 0) {
                scoreText += ' (' + regularScore + ' regular + ' + autoFailureScore + ' auto-failure)';
            }
            scoreText += ' - ' + status;
            
            scoreDisplay.textContent = scoreText;
            scoreDisplay.className = 'score-display ' + (totalScore >= 4 ? 'score-fail' : 'score-pass');
        }

        // Tab navigation function
        function showTab(tab) {
            var sections = document.querySelectorAll('.section');
            for (var i = 0; i < sections.length; i++) {
                sections[i].classList.remove('active');
            }
            
            var navBtns = document.querySelectorAll('.nav-btn');
            for (var i = 0; i < navBtns.length; i++) {
                navBtns[i].classList.remove('active');
            }
            
            if (tab === 'new') {
                document.getElementById('new-section').classList.add('active');
                navBtns[0].classList.add('active');
                setupForm();
            } else if (tab === 'schedule') {
                document.getElementById('schedule-section').classList.add('active');
                navBtns[1].classList.add('active');
                setupForm();
            } else if (tab === 'view') {
                document.getElementById('view-section').classList.add('active');
                navBtns[2].classList.add('active');
                loadInspectionsList();
            } else if (tab === 'reports') {
                document.getElementById('reports-section').classList.add('active');
                navBtns[3].classList.add('active');
                generateReport();
            }
        }

        // Schedule management functions
        async function addRoomToSchedule() {
            var roomInput = document.getElementById('roomInput');
            var roomNumber = roomInput.value;
            
            if (!roomNumber) {
                console.log('No room number selected');
                return;
            }
            
            var roomNumberStr = String(roomNumber);
            
            if (scheduledRooms.indexOf(roomNumberStr) !== -1) {
                console.log('Room ' + roomNumberStr + ' is already scheduled');
                return;
            }
            
            scheduledRooms.push(roomNumberStr);
            console.log('Added room to schedule:', roomNumberStr);
            
            roomInput.value = '';
            updateScheduledRoomsDisplay();
            updateRoomDropdown();
            
            // Auto-save schedule
            await saveData();
        }

        async function removeRoomFromSchedule(roomNumber) {
            var index = scheduledRooms.indexOf(String(roomNumber));
            if (index > -1) {
                scheduledRooms.splice(index, 1);
                console.log('Removed room from schedule:', roomNumber);
                updateScheduledRoomsDisplay();
                updateRoomDropdown();
                
                // Auto-save schedule
                await saveData();
            }
        }

        async function clearAllScheduledRooms() {
            scheduledRooms = [];
            console.log('Cleared all scheduled rooms');
            updateScheduledRoomsDisplay();
            updateRoomDropdown();
            
            // Auto-save schedule
            await saveData();
        }

        async function saveSchedule() {
            await saveData();
            showMessage('Weekly schedule saved successfully!', 'success');
        }

        function updateScheduledRoomsDisplay() {
            var container = document.getElementById('scheduled-rooms');
            
            if (scheduledRooms.length === 0) {
                container.innerHTML = '<p style="color: #a0aec0; text-align: center; margin: 15px 0;">No rooms scheduled yet. Add rooms above.</p>';
                return;
            }
            
            var sortedRooms = scheduledRooms.slice().sort(function(a, b) { return parseInt(a) - parseInt(b); });
            var html = '';
            
            for (var i = 0; i < sortedRooms.length; i++) {
                var room = sortedRooms[i];
                html += '<div class="schedule-room-item">';
                html += '<div class="schedule-room-number">Room ' + room + '</div>';
                html += '<button class="remove-room-btn" onclick="removeRoomFromSchedule(\'' + room + '\')" aria-label="Remove room ' + room + '">√ó</button>';
                html += '</div>';
            }
            
            html += '<p style="text-align: center; margin-top: 16px; color: #a0aec0; font-size: 0.85rem;">Total: ' + scheduledRooms.length + ' rooms scheduled</p>';
            container.innerHTML = html;
        }

        // Inspection management functions
        async function saveInspection() {
            if (isLoading) return;
            
            var roomNumber = document.getElementById('roomNumber').value;
            var inspectorName = document.getElementById('inspectorName').value;
            var notes = document.getElementById('notes').value;
            
            var currentDate = new Date();
            var inspectionDate = currentDate.toISOString().split('T')[0];
            
            if (!roomNumber) {
                console.log('Form validation failed - missing required fields');
                showMessage('Please select a room number', 'error');
                return;
            }
            
            showLoading(true);
            
            try {
                var selectedDemerits = [];
                var selectedAutoFailure = [];
                var regularChecked = document.querySelectorAll('.demerit-item[data-type="regular"].checked');
                var autoFailureChecked = document.querySelectorAll('.demerit-item[data-type="auto-failure"].checked');
                
                for (var i = 0; i < regularChecked.length; i++) {
                    var index = parseInt(regularChecked[i].getAttribute('data-index'));
                    selectedDemerits.push(demerits[index]);
                }
                
                for (var i = 0; i < autoFailureChecked.length; i++) {
                    var index = parseInt(autoFailureChecked[i].getAttribute('data-index'));
                    selectedAutoFailure.push(autoFailureDemerits[index]);
                }
                
                var regularScore = selectedDemerits.length;
                var autoFailureScore = selectedAutoFailure.length * 4;
                var totalScore = regularScore + autoFailureScore;
                
                var inspection = {
                    id: editingId || Date.now(),
                    roomNumber: roomNumber,
                    inspectionDate: inspectionDate,
                    inspectorName: inspectorName,
                    demerits: selectedDemerits,
                    autoFailureDemerits: selectedAutoFailure,
                    regularScore: regularScore,
                    autoFailureScore: autoFailureScore,
                    score: totalScore,
                    status: totalScore >= 4 ? 'FAILED' : 'PASSED',
                    notes: notes,
                    timestamp: new Date().toISOString()
                };
                
                var wasRoomRemoved = false;
                
                if (editingId) {
                    for (var i = 0; i < inspections.length; i++) {
                        if (inspections[i].id === editingId) {
                            inspections[i] = inspection;
                            break;
                        }
                    }
                    console.log('Inspection updated successfully');
                    showMessage('Inspection updated successfully!', 'success');
                } else {
                    var roomNumberStr = String(roomNumber);
                    var roomIndex = scheduledRooms.indexOf(roomNumberStr);
                    
                    if (roomIndex > -1) {
                        scheduledRooms.splice(roomIndex, 1);
                        wasRoomRemoved = true;
                        console.log('Room removed! New scheduled rooms:', scheduledRooms);
                        updateScheduledRoomsDisplay();
                        updateRoomDropdown();
                    }
                    
                    inspections.push(inspection);
                    
                    if (wasRoomRemoved) {
                        showMessage('Inspection saved! Room ' + roomNumber + ' removed from schedule', 'success');
                    } else {
                        showMessage('Inspection saved successfully!', 'success');
                    }
                }
                
                await saveData();
                resetForm();
                
            } catch (error) {
                console.error('Error saving inspection:', error);
                showError('Failed to save inspection. Please try again.');
            } finally {
                showLoading(false);
            }
        }

        function showMessage(text, type) {
            var scoreDisplay = document.getElementById('score-display');
            var originalText = scoreDisplay.textContent;
            var originalClass = scoreDisplay.className;
            
            scoreDisplay.textContent = text;
            if (type === 'error') {
                scoreDisplay.style.background = 'linear-gradient(145deg, #e53e3e, #c53030)';
                scoreDisplay.style.color = '#fed7d7';
            } else {
                scoreDisplay.style.background = 'linear-gradient(145deg, #38a169, #2f855a)';
                scoreDisplay.style.color = '#f0fff4';
            }
            
            setTimeout(function() {
                scoreDisplay.textContent = originalText;
                scoreDisplay.className = originalClass;
                scoreDisplay.style.background = '';
                scoreDisplay.style.color = '';
            }, 3000);
        }

        function resetForm() {
            editingId = null;
            document.getElementById('form-title').textContent = 'New Room Inspection';
            document.getElementById('cancel-btn').style.display = 'none';
            document.getElementById('roomNumber').value = '';
            document.getElementById('inspectorName').value = '';
            document.getElementById('notes').value = '';
            
            var allCards = document.querySelectorAll('.demerit-item');
            for (var i = 0; i < allCards.length; i++) {
                allCards[i].classList.remove('checked');
            }
            updateScore();
        }

        function editInspection(id) {
            var inspection = null;
            for (var i = 0; i < inspections.length; i++) {
                if (inspections[i].id === id) {
                    inspection = inspections[i];
                    break;
                }
            }
            
            if (!inspection) return;
            
            editingId = id;
            document.getElementById('form-title').textContent = 'Edit Room Inspection';
            document.getElementById('cancel-btn').style.display = 'inline-block';
            
            document.getElementById('roomNumber').value = inspection.roomNumber;
            document.getElementById('inspectorName').value = inspection.inspectorName;
            document.getElementById('notes').value = inspection.notes;
            
            var allCards = document.querySelectorAll('.demerit-item');
            for (var i = 0; i < allCards.length; i++) {
                allCards[i].classList.remove('checked');
            }
            
            if (inspection.demerits) {
                for (var i = 0; i < inspection.demerits.length; i++) {
                    var demeritIndex = demerits.indexOf(inspection.demerits[i]);
                    if (demeritIndex !== -1) {
                        var card = document.querySelector('[data-type="regular"][data-index="' + demeritIndex + '"]');
                        if (card) {
                            card.classList.add('checked');
                        }
                    }
                }
            }
            
            if (inspection.autoFailureDemerits) {
                for (var i = 0; i < inspection.autoFailureDemerits.length; i++) {
                    var demeritIndex = autoFailureDemerits.indexOf(inspection.autoFailureDemerits[i]);
                    if (demeritIndex !== -1) {
                        var card = document.querySelector('[data-type="auto-failure"][data-index="' + demeritIndex + '"]');
                        if (card) {
                            card.classList.add('checked');
                        }
                    }
                }
            }
            
            updateScore();
            showTab('new');
        }

        function cancelEdit() {
            resetForm();
        }

        async function deleteInspection(id) {
            try {
                for (var i = 0; i < inspections.length; i++) {
                    if (inspections[i].id === id) {
                        inspections.splice(i, 1);
                        break;
                    }
                }
                
                await saveData();
                loadInspectionsList();
                console.log('Inspection deleted successfully');
            } catch (error) {
                console.error('Error deleting inspection:', error);
                showError('Failed to delete inspection. Please try again.');
            }
        }

        async function deleteAllInspections() {
            if (inspections.length === 0) {
                console.log('No inspections to delete');
                return;
            }
            
            var button = event.target;
            var clickCount = parseInt(button.getAttribute('data-click-count') || '0');
            
            clickCount++;
            button.setAttribute('data-click-count', clickCount);
            
            var originalText = 'Delete All';
            
            if (clickCount === 1) {
                button.textContent = 'Click 2 More Times (' + inspections.length + ' records)';
                button.style.background = 'linear-gradient(145deg, #ed8936, #dd6b20)';
                
                setTimeout(function() {
                    button.setAttribute('data-click-count', '0');
                    button.textContent = originalText;
                    button.style.background = 'linear-gradient(145deg, #e53e3e, #c53030)';
                }, 5000);
                
            } else if (clickCount === 2) {
                button.textContent = 'FINAL WARNING - Click Once More';
                button.style.background = 'linear-gradient(145deg, #c53030, #9b2c2c)';
                
            } else if (clickCount >= 3) {
                try {
                    inspections = [];
                    await saveData();
                    loadInspectionsList();
                    
                    button.setAttribute('data-click-count', '0');
                    button.textContent = originalText;
                    button.style.background = 'linear-gradient(145deg, #e53e3e, #c53030)';
                    
                    console.log('All inspections deleted successfully');
                } catch (error) {
                    console.error('Error deleting all inspections:', error);
                    showError('Failed to delete all inspections. Please try again.');
                }
            }
        }

        function loadInspectionsList() {
            var list = document.getElementById('inspections-list');
            
            if (inspections.length === 0) {
                list.innerHTML = '<p style="text-align: center; color: #a0aec0; padding: 30px; font-size: 1rem; line-height: 1.4;">No inspections recorded yet. Use the "New Inspection" tab to get started.</p>';
                return;
            }
            
            var html = '';
            var sortedInspections = inspections.slice().sort(function(a, b) {
                return new Date(b.inspectionDate) - new Date(a.inspectionDate);
            });
            
            for (var i = 0; i < sortedInspections.length; i++) {
                var inspection = sortedInspections[i];
                
                html += '<div class="inspection-card ' + inspection.status.toLowerCase() + '">';
                html += '<div class="card-actions">';
                html += '<button class="edit-btn" onclick="editInspection(' + inspection.id + ')">Edit</button>';
                html += '<button class="delete-btn" onclick="deleteInspection(' + inspection.id + ')">Delete</button>';
                html += '</div>';
                html += '<h3>Room ' + inspection.roomNumber + ' - ' + inspection.status + '</h3>';
                html += '<p><strong>Date:</strong> ' + new Date(inspection.inspectionDate).toLocaleDateString() + '</p>';
                html += '<p><strong>Inspector:</strong> ' + (inspection.inspectorName || 'Not specified') + '</p>';
                html += '<p><strong>Score:</strong> ' + inspection.score + ' points';
                if (inspection.autoFailureScore && inspection.autoFailureScore > 0) {
                    html += ' (' + (inspection.regularScore || 0) + ' regular + ' + inspection.autoFailureScore + ' auto-failure)';
                }
                html += '</p>';
                
                if (inspection.demerits && inspection.demerits.length > 0) {
                    html += '<p><strong>Regular Violations:</strong> <span class="violation-list">' + inspection.demerits.join(', ') + '</span></p>';
                }
                
                if (inspection.autoFailureDemerits && inspection.autoFailureDemerits.length > 0) {
                    html += '<p><strong>Auto-Failure Violations:</strong> <span class="violation-list">' + inspection.autoFailureDemerits.join(', ') + '</span></p>';
                }
                
                if (inspection.notes) {
                    html += '<p><strong>Notes:</strong> ' + inspection.notes + '</p>';
                }
                
                html += '</div>';
            }
            
            list.innerHTML = html;
        }

        function generateReport() {
            var content = document.getElementById('report-content');
            
            if (inspections.length === 0) {
                content.innerHTML = '<p style="font-size: 1rem; color: #a0aec0; text-align: center; padding: 20px; line-height: 1.4;">No data available for report generation. Complete some inspections first.</p>';
                return;
            }
            
            var total = inspections.length;
            var passed = inspections.filter(function(i) { return i.status === 'PASSED'; }).length;
            var failed = inspections.filter(function(i) { return i.status === 'FAILED'; }).length;
            var passRate = ((passed / total) * 100).toFixed(1);
            
            var html = '<div style="text-align: center; margin-bottom: 30px;">';
            html += '<h3 style="font-size: 1.3rem; margin-bottom: 8px; color: #e2e8f0;">Weekly Dorm Inspection Summary</h3>';
            html += '<p style="font-size: 0.9rem; color: #a0aec0;">Report Generated: ' + new Date().toLocaleDateString() + '</p>';
            if (!isConnected) {
                html += '<p style="font-size: 0.8rem; color: #fed7d7; margin-top: 4px;">‚ö†Ô∏è Showing local data (offline mode)</p>';
            }
            html += '</div>';
            
            html += '<div class="stats-grid">';
            html += '<div class="stat-card total">';
            html += '<div class="stat-number">' + total + '</div>';
            html += '<div class="stat-label">Total</div>';
            html += '</div>';
            html += '<div class="stat-card pass">';
            html += '<div class="stat-number">' + passed + '</div>';
            html += '<div class="stat-label">Passed</div>';
            html += '</div>';
            html += '<div class="stat-card fail">';
            html += '<div class="stat-number">' + failed + '</div>';
            html += '<div class="stat-label">Failed</div>';
            html += '</div>';
            html += '<div class="stat-card rate">';
            html += '<div class="stat-number">' + passRate + '%</div>';
            html += '<div class="stat-label">Pass Rate</div>';
            html += '</div>';
            html += '</div>';
            
            // Generate most common demerits section
            var demeritCounts = {};
            
            for (var i = 0; i < inspections.length; i++) {
                var inspection = inspections[i];
                if (inspection.demerits) {
                    for (var j = 0; j < inspection.demerits.length; j++) {
                        var demerit = inspection.demerits[j];
                        demeritCounts[demerit] = (demeritCounts[demerit] || 0) + 1;
                    }
                }
                if (inspection.autoFailureDemerits) {
                    for (var j = 0; j < inspection.autoFailureDemerits.length; j++) {
                        var demerit = inspection.autoFailureDemerits[j];
                        demeritCounts[demerit] = (demeritCounts[demerit] || 0) + 1;
                    }
                }
            }
            
            var sortedDemerits = [];
            for (var demerit in demeritCounts) {
                sortedDemerits.push({
                    name: demerit,
                    count: demeritCounts[demerit],
                    percentage: ((demeritCounts[demerit] / total) * 100).toFixed(1)
                });
            }
            sortedDemerits.sort(function(a, b) { return b.count - a.count; });
            
            if (sortedDemerits.length > 0) {
                html += '<div style="margin: 30px 0; background: linear-gradient(135deg, #2d3748, #1a202c); padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.3); border: 2px solid #4a5568;">';
                html += '<h3 style="font-size: 1.1rem; margin-bottom: 20px; color: #e2e8f0; text-align: center;">Top 5 Most Common Violations</h3>';
                
                var topDemerits = sortedDemerits.slice(0, 5);
                for (var i = 0; i < topDemerits.length; i++) {
                    var demerit = topDemerits[i];
                    var isAutoFailure = autoFailureDemerits.indexOf(demerit.name) !== -1;
                    var barColor = isAutoFailure ? '#f56565' : '#3182ce';
                    var textColor = isAutoFailure ? '#fed7d7' : '#e2e8f0';
                    var badgeText = isAutoFailure ? 'AUTO-FAIL' : 'REGULAR';
                    var badgeColor = isAutoFailure ? '#c53030' : '#2c5282';
                    
                    html += '<div style="margin-bottom: 16px; background: linear-gradient(135deg, #4a5568, #2d3748); padding: 16px; border-radius: 10px; border: 1px solid ' + barColor + ';">';
                    html += '<div style="margin-bottom: 8px;">';
                    html += '<div style="font-weight: 600; color: ' + textColor + '; font-size: 0.85rem; line-height: 1.3;">' + (i + 1) + '. ' + demerit.name + '</div>';
                    html += '<div style="display: flex; justify-content: space-between; align-items: center; margin-top: 6px;">';
                    html += '<span style="background: ' + badgeColor + '; color: white; padding: 2px 8px; border-radius: 12px; font-size: 0.7rem; font-weight: 700;">' + badgeText + '</span>';
                    html += '<span style="color: #cbd5e0; font-size: 0.8rem; font-weight: 600;">';
                    html += demerit.count + ' times (' + demerit.percentage + '%)';
                    html += '</span>';
                    html += '</div>';
                    html += '</div>';
                    
                    var maxCount = topDemerits[0].count;
                    var barWidth = (demerit.count / maxCount) * 100;
                    html += '<div style="background: rgba(74, 85, 104, 0.3); height: 6px; border-radius: 3px; overflow: hidden;">';
                    html += '<div style="background: ' + barColor + '; height: 100%; width: ' + barWidth + '%; border-radius: 3px; transition: width 0.3s ease;"></div>';
                    html += '</div>';
                    html += '</div>';
                }
                html += '</div>';
            }
            
            html += '<div class="export-buttons">';
            html += '<button onclick="window.print()" class="export-btn print-btn">üì± Print Report</button>';
            html += '<button onclick="exportToCSV()" class="export-btn csv-btn">üìä Export CSV</button>';
            html += '<button onclick="exportToExcel()" class="export-btn excel-btn">üìã Export Excel</button>';
            html += '</div>';
            
            content.innerHTML = html;
        }

        function exportToCSV() {
            if (inspections.length === 0) {
                console.log('No data to export');
                return;
            }
            
            var headers = ['Room Number', 'Date', 'Inspector', 'Regular Score', 'Auto-Failure Score', 'Total Score', 'Status', 'Notes'];
            var csvContent = headers.join(',') + '\n';
            
            for (var i = 0; i < inspections.length; i++) {
                var inspection = inspections[i];
                var row = [
                    inspection.roomNumber,
                    inspection.inspectionDate,
                    inspection.inspectorName || '',
                    inspection.regularScore || 0,
                    inspection.autoFailureScore || 0,
                    inspection.score,
                    inspection.status,
                    '"' + (inspection.notes || '') + '"'
                ];
                csvContent += row.join(',') + '\n';
            }
            
            var blob = new Blob([csvContent], { type: 'text/csv' });
            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = 'dorm-inspection-report-' + new Date().toISOString().split('T')[0] + '.csv';
            a.click();
            URL.revokeObjectURL(url);
            
            console.log('CSV report downloaded successfully');
        }

        function exportToExcel() {
            if (inspections.length === 0) {
                console.log('No data to export');
                return;
            }

            var total = inspections.length;
            var passed = inspections.filter(function(i) { return i.status === 'PASSED'; }).length;
            var failed = inspections.filter(function(i) { return i.status === 'FAILED'; }).length;
            var passRate = ((passed / total) * 100).toFixed(1);
            
            var htmlContent = '<!DOCTYPE html><html><head><meta charset="utf-8">';
            htmlContent += '<meta name="viewport" content="width=device-width, initial-scale=1.0">';
            htmlContent += '<style>';
            htmlContent += '@page { size: 8.5in 11in; margin: 0.5in; }';
            htmlContent += 'body { font-family: Arial, sans-serif; font-size: 10pt; margin: 0; }';
            htmlContent += 'table { border-collapse: collapse; width: 100%; page-break-inside: avoid; }';
            htmlContent += 'th, td { border: 1px solid #000; padding: 3px; text-align: center; font-size: 8pt; }';
            htmlContent += '.title { background: #1a365d; color: white; font-size: 14pt; font-weight: bold; padding: 8px; text-align: center; }';
            htmlContent += '.summary { background: #e2e8f0; color: #1a202c; font-weight: bold; font-size: 9pt; padding: 4px; text-align: center; }';
            htmlContent += '.header { background: #2d3748; color: white; font-weight: bold; font-size: 8pt; }';
            htmlContent += '.room-cell { background: #f7fafc; font-weight: bold; font-size: 9pt; }';
            htmlContent += '.status-pass { background: #68d391; color: #1a202c; font-weight: bold; }';
            htmlContent += '.status-fail { background: #f56565; color: white; font-weight: bold; }';
            htmlContent += '.notes-cell { background: #f7fafc; font-size: 7pt; text-align: left; max-width: 120px; word-wrap: break-word; }';
            htmlContent += '</style></head><body>';
            
            htmlContent += '<table>';
            htmlContent += '<tr><td colspan="8" class="title">DORM INSPECTION REPORT - ' + new Date().toLocaleDateString() + '</td></tr>';
            htmlContent += '</table><br>';
            
            htmlContent += '<table>';
            htmlContent += '<tr>';
            htmlContent += '<td class="summary">Total: ' + total + '</td>';
            htmlContent += '<td class="summary" style="background: #c6f6d5;">Pass: ' + passed + '</td>';
            htmlContent += '<td class="summary" style="background: #fed7d7;">Fail: ' + failed + '</td>';
            htmlContent += '<td class="summary" style="background: #bee3f8;">Rate: ' + passRate + '%</td>';
            htmlContent += '</tr>';
            htmlContent += '</table><br>';
            
            htmlContent += '<table>';
            htmlContent += '<tr>';
            htmlContent += '<td class="header">Room</td>';
            htmlContent += '<td class="header">Date</td>';
            htmlContent += '<td class="header">Inspector</td>';
            htmlContent += '<td class="header">Reg Score</td>';
            htmlContent += '<td class="header">AF Score</td>';
            htmlContent += '<td class="header">Total</td>';
            htmlContent += '<td class="header">Status</td>';
            htmlContent += '<td class="header">Notes</td>';
            htmlContent += '</tr>';
            
            for (var i = 0; i < inspections.length; i++) {
                var inspection = inspections[i];
                htmlContent += '<tr>';
                htmlContent += '<td class="room-cell">' + escapeHtml(inspection.roomNumber) + '</td>';
                htmlContent += '<td class="room-cell">' + new Date(inspection.inspectionDate).toLocaleDateString() + '</td>';
                htmlContent += '<td>' + escapeHtml(inspection.inspectorName || '') + '</td>';
                htmlContent += '<td>' + (inspection.regularScore || 0) + '</td>';
                htmlContent += '<td>' + (inspection.autoFailureScore || 0) + '</td>';
                htmlContent += '<td style="font-weight: bold;">' + inspection.score + '</td>';
                
                var statusClass = inspection.status === 'PASSED' ? 'status-pass' : 'status-fail';
                var statusText = inspection.status === 'PASSED' ? 'PASS' : 'FAIL';
                htmlContent += '<td class="' + statusClass + '">' + statusText + '</td>';
                
                var notesText = inspection.notes || '';
                if (notesText.length > 60) {
                    notesText = notesText.substring(0, 57) + '...';
                }
                htmlContent += '<td class="notes-cell">' + escapeHtml(notesText) + '</td>';
                htmlContent += '</tr>';
            }
            
            htmlContent += '</table>';
            htmlContent += '</body></html>';
            
            var blob = new Blob([htmlContent], { type: 'application/vnd.ms-excel' });
            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = 'dorm-inspection-report-' + new Date().toISOString().split('T')[0] + '.xls';
            a.click();
            URL.revokeObjectURL(url);
            
            console.log('Mobile-optimized Excel report downloaded successfully');
        }

        function escapeHtml(unsafe) {
            if (unsafe === null || unsafe === undefined) return '';
            return String(unsafe)
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Initialize the application
        window.onload = async function() {
            console.log('Application starting...');
            await loadData();
            setupForm();
            console.log('Application ready');
        };

        // Real-time sync listener (optional - for live collaboration)
        if (db) {
            // Listen for changes to inspections
            db.collection('dormData').doc('inspections').onSnapshot(function(doc) {
                if (doc.exists && !isLoading) {
                    const data = doc.data();
                    const newInspections = data.inspections || [];
                    
                    // Only update if the data is different (to avoid infinite loops)
                    if (JSON.stringify(newInspections) !== JSON.stringify(inspections)) {
                        console.log('Inspections updated from server');
                        inspections = newInspections;
                        
                        // Refresh current view if needed
                        const activeSection = document.querySelector('.section.active');
                        if (activeSection && activeSection.id === 'view-section') {
                            loadInspectionsList();
                        } else if (activeSection && activeSection.id === 'reports-section') {
                            generateReport();
                        }
                    }
                }
            }, function(error) {
                console.error('Error listening to inspections changes:', error);
            });

            // Listen for changes to schedule
            db.collection('dormData').doc('schedule').onSnapshot(function(doc) {
                if (doc.exists && !isLoading) {
                    const data = doc.data();
                    const newScheduledRooms = data.scheduledRooms || [];
                    
                    if (JSON.stringify(newScheduledRooms) !== JSON.stringify(scheduledRooms)) {
                        console.log('Schedule updated from server');
                        scheduledRooms = newScheduledRooms;
                        updateScheduledRoomsDisplay();
                        updateRoomDropdown();
                    }
                }
            }, function(error) {
                console.error('Error listening to schedule changes:', error);
            });
        }

        // Touch and mobile optimizations
        document.addEventListener('touchstart', function() {}, {passive: true});
        
        document.addEventListener('touchend', function(event) {
            var now = (new Date()).getTime();
            if (now - lastTouchEnd <= 300) {
                event.preventDefault();
            }
            lastTouchEnd = now;
        }, false);
        
        var lastTouchEnd = 0;

        window.addEventListener('orientationchange', function() {
            setTimeout(function() {
                document.body.style.height = window.innerHeight + 'px';
                setTimeout(function() {
                    document.body.style.height = '';
                }, 100);
            }, 100);
        });

        document.addEventListener('touchmove', function(event) {
            if (event.scale !== 1) {
                event.preventDefault();
            }
        }, { passive: false });
    </script>
</body>
</html>
