                    <div class="demerits-grid" id="demerits-container">
                        <!-- Populated by JavaScript -->
                    </div>
                    
                    <hr style="margin: 25px 0; border: none; border-top: 2px solid #4a5568;">
                    
                    <h4 style="margin-bottom: 15px; color: #fed7d7; font-weight: bold; font-size: 0.95rem;">‚ö†Ô∏è Auto Failure Demerits (4 points each)</h4>
                    <div class="demerits-grid" id="auto-failure-container">
                        <!-- Populated by JavaScript -->
                    </div>
                </div>

                <div class="score-display score-pass" id="score-display">
                    Score: 0 points - PASSED
                </div>

                <div class="form-group">
                    <label for="notes">Additional Notes</label>
                    <textarea id="notes" rows="3" placeholder="Any additional observations or comments..."></textarea>
                </div>

                <div class="sticky-actions">
                    <button type="button" class="btn-primary" onclick="saveInspection()" id="save-btn">Save Inspection</button>
                    <button type="button" class="btn-primary" id="cancel-btn" style="display: none; margin-top: 12px; background: linear-gradient(145deg, #e53e3e, #c53030);" onclick="cancelEdit()">Cancel Edit</button>
                </div>
            </div>

            <!-- Weekly Schedule Section -->
            <div id="schedule-section" class="section">
                <h2>üìÖ Weekly Inspection Schedule</h2>
                
                <div class="demerits-section">
                    <h3 style="margin-bottom: 20px; color: #e2e8f0; font-size: 1.1rem;">Set Rooms for This Week's Inspections</h3>
                    
